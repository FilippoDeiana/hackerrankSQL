SELECT H.HACKER_ID, H.NAME, SUM(SCORE) AS SUM 
               FROM (
                    SELECT S.CHALLENGE_ID, MAX(S.SCORE) AS SCORE, S.HACKER_ID
                    FROM SUBMISSIONS S
                    GROUP BY S.CHALLENGE_ID, S.HACKER_ID
                )AS T
JOIN HACKERS H ON H.HACKER_ID = T.HACKER_ID
GROUP BY H.HACKER_ID, H.NAME
HAVING SUM(SCORE)>0
ORDER BY SUM DESC, H.HACKER_ID ASC
